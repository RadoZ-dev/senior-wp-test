<div class="findco-helpful-article {{ voted }}">
    <div class="findco-helpful-article__form">
        <p>{{ question }}</p>
        <button class="yes">
            <img src="{{ smile }}" alt="{{ yes }}">
            {{ yes }}
        </button>
        <button class="no">
            <img src="{{ sad }}" alt="{{ no }}">
            {{ no }}
        </button>
    </div>

    <div class="findco-helpful-article__stats">
        <p>{{ confirmMessage }}</p>
        <button class="yes selected">
            <img src="{{ smile }}" alt="{{ yes }}">
            70%
        </button>
        <button class="no">
            <img src="{{ sad }}" alt="{{ no }}">
            30%
        </button>
    </div>
</div>